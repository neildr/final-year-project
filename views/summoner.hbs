{{#if summoner.name}}
    {{#if summoner.exists}}
        <div class="bodyContainer">
            <h1 class="testWhite">Summoner Stats -{{summoner.name}} - {{summoner.region}} </h1>
            <div class="pageContent">
                <div class="rowContainer">
                    <div class="summaryRow">
                        <img class="wrapperImage" src="http://stelar7.no/cdragon/latest/profile-icons/{{ summoner.profileIconId }}.jpg" />
                        <div class="summaryInfo">
                            <div class="testWhite">{{summoner.name}}</div>
                            <div class="testWhite">{{summoner.region}}</div>
                            <div class="testWhite">Level: {{summoner.summonerLevel}}</div>
                        </div>
                    </div>
                    <div class="summaryRow">
                        {{#if rankedInfo.tier}}
                            <img class="wrapperImage" src="/../../images/ranked/{{rankedInfo.tier}}_{{rankedInfo.rank}}.png" />
                            <div class="summaryInfo">
                                <div class="testWhite">{{ rankedInfo.tier }} {{rankedInfo.rank}} </div>
                                <div class="testWhite">{{rankedInfo.leaguePoints}} LP</div>
                                <div class="testWhite">{{rankedInfo.winRateRanked}}% win %</div>
                                <div class="testWhite">Games played: {{rankedInfo.totalGamesRanked}}</div>
                            </div>
                        {{else}}
                            <img class="wrapperImage" src="/../../images/ranked/unranked.png" />
                            <div class="summaryInfo">
                                <p class="testWhite">Unranked</p>
                            </div>
                        {{/if}}
                    </div>
                    <div class="summaryRow">
                        <img class="wrapperImage" src="http://stelar7.no/cdragon/latest/champion-icons/{{mastery.championId}}.png" />
                        <div class="summaryInfo">
                            <div class="testWhite"><img class="masteryImg" src="/../../images/mastery/champMasteryLevel_{{mastery.championLevel}}.png" /></div>
                            <div class="testWhite">{{mastery.championName}}, {{mastery.championTitle}}</div>
                            <div class="testWhite">Points: {{mastery.championPoints}}</div>
                        </div>
                    </div>
                </div>
                </br>
                </br>
                <h1 class="testWhite">Summary of {{summoner.name}} in the last {{matches.ids.length}} matches</h1>
                <h1 class="testWhite">Win ratio: {{matches.winRatio}}%</h1>
                <div class="rowContainer">
                    <div class="summaryRow">
                        <img class="wrapperImage" src="http://stelar7.no/cdragon/latest/champion-icons/{{matches.modeChampion.info.mode}}.png" />
                        <div class="summaryInfo">
                            <div class="testWhite">Most Played Champion</div>
                            <div class="testWhite">{{matches.modeChampion.name}}, {{matches.modeChampion.title}}</div>
                            <div class="testWhite">Games played: {{matches.modeChampion.info.count}}</div>
                        </div>
                    </div>
                    <div class="summaryRow">
                        <img class="wrapperImage" src="/../../images/roles/{{matches.modePosition.mode}}.png" />
                        <div class="summaryInfo">
                            <div class="testWhite">Most Played Role</div>
                            <div class="testWhite">{{matches.modePosition.mode}}</div>
                            <div class="testWhite">Games played: {{matches.modePosition.count}}</div>
                        </div>
                    </div>
                    <div class="summaryRow">
                        <dl>
                          <dt>
                            Role distribution
                          </dt>
                          <dd class="percentage percentage-40"><span class="textBarChart">TOP: {{matches.actualpositionCount.TOP}}</span></dd>
                          <dd class="percentage percentage-10"><span class="textBarChart">JUNGLE: {{matches.actualpositionCount.JUNGLE}}</span></dd>
                          <dd class="percentage percentage-00"><span class="textBarChart">MID: {{matches.actualpositionCount.MID}}</span></dd>
                          <dd class="percentage percentage-10"><span class="textBarChart">ADC: {{matches.actualpositionCount.ADC}}</span></dd>
                          <dd class="percentage percentage-40"><span class="textBarChart">SUPPORT: {{matches.actualpositionCount.SUPPORT}}</span></dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="testWhite">
                <div class="testWhite">
                    {{matches.matchData.0.kills}}
                </div>
                <div>
    {{else}}
        <h1 class="testWhite">Summoner {{summoner.name}} does not exist on {{summoner.region}}.</h1>
    {{/if}}
{{else}}
    <h1 class="testWhite">Error - do not access lookup page via URL.</h1>
{{/if}}
</div>
