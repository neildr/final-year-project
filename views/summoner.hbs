<div class="bodyContainer">
    {{#if validRegion}}
        {{#if summoner.exists}}
            {{#if mastery.valid}}
                <style type='text/css' scoped>
                    .bgImageContainer.true{
                        background: linear-gradient( rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)),
